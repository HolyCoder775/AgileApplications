@model EntityLayer.Concrete.Sprint
@{
    ViewData["Title"] = "EditSprint";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div style="display: flex; justify-content: center; align-items: center; flex-direction: column">
    <h1>Edit Scrum Team</h1>
    @using (Html.BeginForm("EditSprint", "Sprint", FormMethod.Post))
    {
        @Html.Label("Sprint ID")
        @Html.TextBoxFor(x => x.SprintId, new {@class="form-control", @style="width: 300px"})
        <br />
        @Html.Label("Sprint Name")
        @Html.TextBoxFor(x => x.Name, new {@class="form-control", @style="width: 300px"})
        <br />
        @Html.Label("Scrum Team Name")
        @Html.DropDownListFor(x => x.ScrumTeamId, (List<SelectListItem>)ViewBag.scrumTeamValues, new {@class = "form-control"})
        <br />
        @Html.Label("Start Date")
        @Html.TextBoxFor(x => x.StartDate, new {@class="form-control", @style="width: 300px"})
        <br />
        @Html.Label("End Date")
        @Html.TextBoxFor(x => x.EndDate, new {@class="form-control", @style="width: 300px"})
        <br />
        @Html.HiddenFor(x => x.CreatedDate)
        @Html.HiddenFor(x => x.CreatedBy)
        @Html.HiddenFor(x => x.ModifiedBy)
        <button class="btn btn-secondary" style="width: 300px">Save</button>
    }

</div>
