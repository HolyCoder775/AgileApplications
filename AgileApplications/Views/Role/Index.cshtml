@using EntityLayer.Concrete
@model List<Role>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</head>
<body>
    <div style="margin: 10px">
        <h1>Role Page</h1>
        <a href="~/Role/AddRole" class="btn btn-primary" style="margin-bottom: 5px">Add New</a>
        <table class="table table-bordered">
            <tr>
                <th>RoleID</th>
                <th>Name</th>
                <th>Description</th>
                <th>IsActive</th>
                <th>CreatedBy</th>
                <th>CreatedDate</th>
                <th>ModifiedBy</th>
                <th>ModifiedDate</th>
                <th>Delete</th>
                <th>Update</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.RoleId</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.IsActive</td>
                    <td>@item.CreatedBy</td>
                    <td>@(((DateTime)item.CreatedDate).ToString("d"))</td>
                    <td>@item.ModifiedBy</td>
                    <td>@(((DateTime)item.ModifiedDate).ToString("d"))</td>
                    <td><a href="~/Role/DeleteRole/@item.RoleId" class="btn btn-danger">Delete</a></td>
                    <td><a href="~/Role/EditRole/@item.RoleId" class="btn btn-secondary">Update</a></td>
                </tr>
            }
        </table>
    </div>

</body>
</html>