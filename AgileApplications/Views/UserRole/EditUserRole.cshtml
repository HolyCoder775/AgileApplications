@model EntityLayer.Concrete.UserRole
@{
    ViewData["Title"] = "EditUserRole";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div style="display: flex; justify-content: center; align-items: center; flex-direction: column">
    <h1>Edit Scrum Team</h1>
    @using (Html.BeginForm("EditUserRole", "UserRole", FormMethod.Post))
    {
        @Html.Label("UserRole ID")
        @Html.TextBoxFor(x => x.UserRoleId, new {@class="form-control", @style="width: 300px"})
        @Html.Label("User Name")
        @Html.DropDownListFor(x => x.UserId, (List<SelectListItem>)ViewBag.userValues, new {@class = "form-control"})
        @Html.Label("Role Name")
        @Html.DropDownListFor(x => x.RoleId, (List<SelectListItem>)ViewBag.roleValues, new {@class = "form-control"})
        <br />
        @Html.HiddenFor(x => x.CreatedDate)
        @Html.HiddenFor(x => x.CreatedBy)
        @Html.HiddenFor(x => x.ModifiedBy)
        <button class="btn btn-secondary" style="width: 300px">Save</button>
    }

</div>

